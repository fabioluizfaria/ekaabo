body.corpo
    div.centro
        main 
            a.btn.btn-primary.botao(href="#", onClick="logout()" ) Sair
            //-a.link#sair(href="#", onClick="logout()") Sair
            br  
            h1.titulo DÃºvidas e Respostas
            if todasAsDuvidas 
                each linha in todasAsDuvidas
                    div.linha
                        p.texto Nome: 
                        #msg.item= `${linha.nome}`
                        br
                        p.texto Pergunta: 
                        #msg.item= `${linha.pergunta}`
                        form(id=`${linha.id}` name=`${linha.id}`)
                            label(for="resposta") Resposta
                            textarea#resposta(cols="80", rows="10", required, name="resposta")=`${linha.resposta}`
                            div.checkbox
                                if linha.publicar
                                    input.item.check(type="checkbox", name="publicar", id="publicar" checked)
                                else 
                                    input.item.check(type="checkbox", name="publicar", id="publicar")
                                label.texto(for="publicar") publicar 
                            input.enviar(type="button", value="Atualizar" onClick=`submitForm(${linha.id})`)
                            span(id=`msgResp${linha.id}`)
        



    

